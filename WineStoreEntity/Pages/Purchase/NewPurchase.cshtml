@page
@using WineStoreEntity.Models @*namespace*@
@model NewPurchaseModel



<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


<div class="container">
    <h3>Add Customer</h3>
    <hr />
    <br />
    <form method="post">
        <div class="row">
            <div class="col-md-4">
                <label asp-for="purchase.Company"></label>
                <input asp-for="purchase.Company" class="form-control" />
                <span class="alert-danger" asp-validation-for="purchase.Company"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label asp-for="purchase.Category"></label>
                <input asp-for="purchase.Category" class="form-control" />
                <span class="alert-danger" asp-validation-for="purchase.Category"></span>
            </div>
        </div>


        <div class="row">
            <div class="col-md-4">
                <label asp-for="purchase.Price"></label>
                <input asp-for="purchase.Price" class="form-control" />
                <span class="alert-danger" asp-validation-for="purchase.Price"></span>
            </div>
        </div>



        <div class="row">
            <div class="col-md-4">
                <label asp-for="purchase.Qty"></label>
                <input asp-for="purchase.Qty" class="form-control" />
                <span class="alert-danger" asp-validation-for="purchase.Qty"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label asp-for="purchase.PurchaseDate"></label>
                <input asp-for="purchase.PurchaseDate" class="form-control" />
                <span class="alert-danger" asp-validation-for="purchase.PurchaseDate"></span>
            </div>
        </div>

        <br />
        <input type="submit" value="Save" class="btn btn-primary" />
        <a class="btn btn-default" href="/ViewAllPurchase">Cancel</a>
    </form>
</div>
