@page "{id:int}"
@using WineStoreEntity.Models
@model EditContactModel



<div class="container">
    <h3>Edit Contact Record </h3>
    <hr />
    <br />
    <form method="post">
        <input asp-for="contact.ID" type="hidden" />
        <div class="row">
            <div class="col-md-4">
                <label asp-for="contact.Name"></label>
                <input asp-for="contact.Name" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label asp-for="contact.Email"></label>
                <input asp-for="contact.Email" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label asp-for="contact.Phone"></label>
                <input asp-for="contact.Phone" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label asp-for="contact.Message"></label>
                <input asp-for="contact.Message" class="form-control" />
            </div>
        </div>

        <br />
        <input type="submit" value="Update" class="btn btn-primary" />
        <a class="btn btn-default" href="/ViewContact">Cancel</a>
    </form>
</div>

